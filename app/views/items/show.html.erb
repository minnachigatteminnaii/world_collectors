<div class="row">
    <div class="col-md-3">
        <%= render 'layouts/category_continent' %>
    </div>

    <div class="col-md-6">
        <div>
            <%= attachment_image_tag @item, :jacket_image, :fill, 50, 50 %>
        </div>
        <div>
            <p><%= @item.item_name %></p>
            <p><%= @item.label_name %></p>
            <p><%= @item.artist.name %></p>
            <p><%= @item.genre.name %></p>
            <p><%= (@item.price * 1.08).floor %></p>
            <p><%= @item.sales_management %></p>
        </div>
    </div>

    <div class="col-md-3">
        <% if current_user&.cart_items&.find_by(item_id: @item.id) %>
            <p>商品は既にカートに追加されています！</p>
        <% else %>
            <% if user_signed_in? %>
                <%= form_for(@cart_item, url: carts_path) do |f| %>
                    <%= f.hidden_field :item_id, value: @item.id %>
                    <%= f.select :quantity, options_for_select((1..@stock).to_a, 1) %>
                    <%= f.submit 'カートへ追加', class:"btn btn-primary" %>
                <% end %>
            <% end %>
        <% end %>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h3>収録内容</h3>
            <% @item.disks.each do |disk| %>
                <h4><%= disk.name %></h4>
                <table class="table">
                    <tr>
                        <th>順</th>
                        <th>曲名</th>
                    </tr>
                    <% disk.musics.each do |music| %>
                        <tr>   
                            <td><%= music.song_order %></td>
                            <td><%= music.name %></td>
                        </tr>
                    <% end %>
                </table>
            <% end %>
    </div>
</div>