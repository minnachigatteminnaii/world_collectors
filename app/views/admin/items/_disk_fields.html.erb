<div class="nested-fields">
    <div class="form-group">
        <%= d.label :name, 'ディスク名' %>
        <%= d.text_field :name, class:"form-control" %>
        <%= link_to_remove_association "削除", d %>
    </div>
    <div class="musics">
        <%= d.fields_for :musics do |music| %>
            <%= render 'music_fields', m: music %>
        <% end %>
        <div class="links">
            <%= link_to_add_association '曲を追加', d, :musics %> 
        </div>
    </div>
</div>