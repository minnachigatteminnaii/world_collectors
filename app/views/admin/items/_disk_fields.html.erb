<div class="nested-fields">
    <div class="form-group">
        <%= f.label :name, 'ディスク名' %>
        <%= f.text_field :name, class:"form-control" %>
        <%= link_to_remove_association "このディスクを削除", f, class:"btn btn-danger" %>
    </div>
    <div class="musics">
        <%= f.fields_for :musics do |music| %>
            <%= render 'music_fields', f: music %>
        <% end %>
        <div class="links">
            <%= link_to_add_association '曲を追加', f, :musics, class:"btn btn-primary" %> 
        </div>
    </div>
</div>