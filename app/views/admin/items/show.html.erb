<div class="row">
    <div class="col-md-offset-2 col-md-4">
        <h4><small>アーティスト名</small> <%= @item.artist.name %></h4>
        <h4><small>商品名</small> <%= @item.item_name %></h4>
        <h4><small>レーベル名</small> <%= @item.label_name %></h4>
        <h4><small>ジャンル名</small> <%= @item.genre.name %></h4>
        <h4><small>商品価格</small> ¥<%= ((@item.price * 1.08).floor).to_s(:delimited) %></h4>
        <h4><small>在庫数</small> <%= @stock %></h4>
        <h4><small>販売状況</small> <%= @item.sales_management %></h4>
    </div>

    <div class="col-md-4">
        <%= attachment_image_tag @item, :jacket_image, :fill, 220, 220, fallback: "m_e_others_500.png", size:'220x220'  %>
    </div>

    <div class="col-md-2">
        <div>
            <%= link_to '編集', edit_admin_item_path, class:"btn btn-primary" %>
            <%= link_to '削除', admin_stop_path(@item), method: :put, class:"btn btn-primary" %>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h3>収録内容</h3>
        <% @item.disks.each do |disk| %>
            <h4><%= disk.name %></h4>
            <table class="table fix-table">
                <tr>
                    <th class="admin-item-show-th">順</th>
                    <th>曲名</th>
                </tr>
                <% disk.musics.each do |music| %>
                    <tr>
                        <td class="admin-item-show-td"><%= music.song_order %></td>
                        <td><%= music.name %></td>
                    </tr>
                <% end %>
            </table>
        <% end %>
    </div>
</div>

