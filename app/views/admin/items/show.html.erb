<div class="row">
    <div class="col-md-6">
        <p><%= @item.artist.name %></p>
        <p><%= @item.item_name %></p>
        <p><%= @item.label_name %></p>
        <p><%= @item.genre.name %></p>
        <p><%= @item.price %></p>
        <p><%= @stock %>
        <p><%= @item.sales_management %></p>
    </div>

    <div class="col-md-6">
        <%= attachment_image_tag @item, :jacket_image, :fill, 150, 150 %>

        <div class="row">
            <div class="col-md-2">
                <%= link_to '編集', edit_admin_item_path, class:"btn btn-primary" %>
            </div>

            <div class="col-md-2">
                <%= link_to '削除', admin_stop_path(@item), method: :put, class:"btn btn-primary" %>
            </div>
        </div>
    </div>
</div> 