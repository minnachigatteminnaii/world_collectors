<div class="row">
    ####質問
	<%= form_tag(confirm_orders_path) do %>
        <div class="col-md-offset-2 col-md-8">
            <p><%= current_user.name %></p>
            <%= select_tag :shopping_address, options_for_select(@addresses) %>
            <%= select_tag :payment_methods, options_for_select(["代金引き換え", cash], ["銀行振り込み", bank], ["クレジット決済", credit]) %>
        </div>

        <div class="col-md-offset-2 col-md-8">
            <table>
                <tr>
                    <th>商品名</th>
                    <th>個数</th>
                    <th>金額</th>
                </tr>
                <% @user_cart_items do |cart_item| %>
                    <tr>
                        <td><%= cart_item.item.item_name %></td>
                        <td><%= cart_item.quantity %></td>
                        <td><%= cart_item.item.price * cart_item.quantity %></td>
                    </tr>
                <% end %>
            </table>
        </div>

        <div class="col-md-offset-2 col-md-8">
            <div>
                <p>送料  500円</p>
                <p>代引き手数料  150円</p>
                <p>合計金額  <%= @total_price %></p>
            </div>

            <%= f.submit '購入確認画面へ', confirm_orders_path, class:"btn btn-primary" %>
        </div>
	<% end %>
</div>